json('lib/colors.json')

body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,button,textarea,p,blockquote,th,td{margin:0;padding:0;}table{border-collapse:collapse;border-spacing:0;}fieldset,img,a img{border:none;}address,caption,cite,code,dfn,em,strong,th,var,optgroup{font-style:inherit;font-weight:inherit;}del,ins{text-decoration:none;}li{list-style:none;}caption,th{text-align:left;}h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}q:before,q:after{content:'';}abbr,acronym{border:0;font-variant:normal;}sup{vertical-align:baseline;}sub{vertical-align:baseline;}legend{color:#000;}

* {
  box-sizing: border-box;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

@require('./styles/weather-icons')

input,
textarea {
  user-select: text;
}

body {
  color: #333;
  font-size: 16px;
  height: 100%;
  overflow-x: hidden;
  width: 100%;
}

body,
input,
textarea {
  font-family: sans-serif;
}

p {
  line-height: 1.5;
}

a {
  color: $wind;
  text-decoration: none;

  &:hover,
  &:focus,
  &:active {
    color: lighten($wind, 20%);
    text-decoration: underline;
  }
}

button {
  cursor: pointer;
}

.app {
  bottom: 0;
  right: 0;
  overflow-x: hidden;
  position: absolute;
  left: 0;
  top: 0;
}

header {
  margin: 0 auto;
  max-width: 32em;
  padding-top: 0.5em;
}

.location-alerts {
  display: flex;
  flex-grow: 2;
  padding: 0.5em;
}

.alerts-badge {
  align-items: center;
  display: none;
  margin-left: 0.5em;

  .has-alerts & {
    display: flex;
  }

  button {
    align-items: center;
    background: $alert;
    border-radius: 50%;
    border: none;
    color: #fff;
    display: flex;
    font-size: 1em;
    height: 2em;
    justify-content: center;
    width: 2em;

    &:hover {
      background: darken($alert, 10%);
    }

    .is-standalone &:hover {
      background: $alert;
    }
  }
}

.showing-alerts .alerts-badge button {
  border-bottom-left-radius: 0;
}

.location {
  display: flex;
  flex-grow: 2;
}

.location-chooser {
  display: flex;
  justify-content: center;
  width: 100%;

  button {
    align-items: center;
    background: #666;
    border: none;
    color: #fff;
    display: flex;
    font-size: 1em;
    outline: none;
    padding: 0.4em 0.6em;

    &:hover {
      background: #444;
    }

    &[disabled],
    &[disabled]:hover {
      background: #999;
      cursor: not-allowed;
    }
  }

  @keyframes spin {
    0%   { transform: rotate(0deg);   }
    100% { transform: rotate(360deg); }
  }

  .animate {
    animation: spin 2s linear infinite;
  }

  .user-location,
  .toggle-recent {
    margin-right: 0.5em;
  }

  .user-location {
    border-radius: 5px 0 0 5px;
  }

  .chooser {
    flex-grow: 2;
    min-width: 12em;
    position: relative;

    .clear {
      color: #666;
      cursor: pointer;
      display: none;
      padding: 0.4em 0.6em;
      position: absolute;
      right: 2px;
      top: 2px;
    }

    form:hover {
      input {
        padding-right: 2em;
      }

      .clear {
        display: block;
      }
    }

    input:focus {
      border-color: $precip;
      outline: none;
      padding-right: 2em;

      + .clear {
        display: block;
      }
    }
  }

  .search {
    border-radius: 0 5px 5px 0;
    margin-left: 0.5em;
  }

  .query {
    border: solid 1px $border;
    border-radius: 0;
    padding: 0.4em 0.6em;
    font-size: 1em;
    width: 100%;
    -webkit-appearance: none;
  }

  ul {
    background: #fff;
    border: solid 1px $border;
    border-top: none;
    box-shadow: 0 0 0.4em rgba(0, 0, 0, 0.1);
    display: none;
    left: 0;
    position: absolute;
    right: 0;
    top: 100%;
    z-index: 1;

    li {
      border-top: solid 1px $border;
      display: block;
      cursor: pointer;
      padding: 0.4em 0.6em;

      &:hover {
        background: #f4f4f4;
      }

      &:first-child {
        border-top: none;
        padding-top: 0.2rem;
      }
    }
  }

  &.showing-recent .recent,
  &.has-options .options {
    display: block;
  }

  &.has-options .recent {
    display: none;
  }

  .recent {
    label {
      color: #666;
      font-size: 0.8em;
      padding: 0.3em 0.4em;
    }

    li {
      display: flex;
      padding: 0;

      &:hover {
        background: none;
      }

      div {
        align-items: center;
        cursor: pointer;
        display: flex;
        padding: 0.4em 0.6em;

        &:hover {
          background: #f4f4f4;
        }
      }

      .description {
        flex-grow: 2;
      }

      form.description {
        display: none;
      }

      &.is-editing {
        div.description { display: none; }
        form.description { display: block; }
      }

      input {
        background: #f8f8f8;
        border: none;
        border-right: solid 1px #e3e3e3;
        font-size: 1em;
        padding: 0.4em 0.6em;
        width: 100%;

        &:focus {
          outline: solid 1px $precip;
        }
      }

      button {
        color: #afafaf;

        &,
        &:hover {
          background: none;
        }
      }

      &.is-editing .edit,
      .edit:hover {
        color: $precip;
      }

      .remove:hover {
        color: $alert;
      }
    }
  }

  .location-error {
    color: $alert;
    background: #ffebe2;
    border: solid 1px $alert;
    display: none;
    font-size: 0.8em;
    left: 0;
    padding: 0.6em 1em;
    position: absolute;
    right: 0;
    top: 100%;
  }

  &.has-error .location-error {
    display: block;
  }
}

.alerts {
  display: none;
  justify-content: center;
  padding: 0 0.5em;

  .showing-alerts & {
    display: flex;
  }

  ul {
    max-width: 31em;
    width: 100%;
  }
}

.alert {
  border: solid 1px $alert;
  border-radius: 3px;
  margin-bottom: 0.4em;
  width: 100%;

  .alert-title {
    background: $alert;
    color: #fff;
    align-items: stretch;
    display: flex;

    span,
    button {
      align-items: center;
      display: flex;
      padding: 0.4em 0.6em;
    }

    span {
      flex-grow: 2;

      svg {
        margin-right: 0.8em;
      }
    }

    button {
      background: none;
      border: none;
      border-left: solid 1px darken($alert, 20%);
      color: #fff;
      font-size: 1em;
      outline: none;

      &:first-of-type {
        white-space: nowrap;
      }

      &:hover {
        background: darken($alert, 20%);
      }
    }
  }

  p {
    color: #333;
    display: none;
    padding: 0.4em 1em;

    &:first-of-type {
      padding-top: 0.8em;
    }

    &:last-of-type {
      padding-bottom: 0.8em;
    }
  }

  &.is-open p {
    display: block;
  }
}

.fullscreen-centered {
  align-items: center;
  bottom: 0;
  display: flex;
  justify-content: center;
  left: 0;
  position: fixed;
  top: 0;
  right: 0;
}

.weather-error {
  color: $alert;
  margin: 0 auto;
  padding: 3em 1em 1em;
  text-align: center;
  width: 49em;

  p, pre {
    margin: 0 auto;
    max-width: 36em;
  }

  .error-message {
    background: #ffebe2;
    border: solid 1px $alert;
    margin-top: 0.6em;
    overflow: auto;
    padding: 0.6em 1em;
  }
}

@keyframes rock {
    0% { transform: rotate(0.05turn); }
    10% { transform: rotate(0.05turn); }
   50% { transform: rotate(-0.05turn); }
   60% { transform: rotate(-0.05turn); }
  100% { transform: rotate(0.05turn); }
}

@keyframes spin {
  0% { transform: rotate(0); }
  100% { transform: rotate(359deg); }
}

.loader {
  @extend .fullscreen-centered;
  padding: 3rem 2rem;

  .weather-icon {
    margin: 0 1rem;
  }

  .weather-icon:first-child {
    animation: rock 2s infinite;
  }

  .weather-icon:nth-child(2)  {
    animation: spin 4s infinite linear;
  }

  .weather-icon:last-child {
    animation: rock 2s infinite;
  }
}

.current {
  display: flex;
  justify-content: center;
  margin: 0.5em 0 1em;
  text-align: center;

  .row {
    display: flex;
    justify-content: center;
    margin-bottom: 1em;

    &:first-of-type {
      margin-top: 0.4em;
      margin-bottom: 0.4em;
    }

    p {
      align-items: center;
      display: flex;
      justify-content: center;
      line-height: 1.2;
    }
  }

  .apparent-temp {
    font-size: 0.9em;
  }

  .temp {
    font-size: 4em;
    margin-right: 0.6rem;

    .degrees {
      font-size: 2rem;
      position: relative;
      top: 0.2em;
      vertical-align: top;
    }
  }

  .apparent-temp {
    margin-right: 1rem;
  }

  &.lower-apparent .apparent-temp {
    color: $cold;
  }

  &.higher-apparent .apparent-temp {
    color: $hot;
  }

  .precip {
    color: darken($precip, 10%);
  }

  .weather-icon {
    cursor: pointer;
    margin-bottom: 0.2em;
  }
}

.radar {
  margin-left: 1.2em;
  position: relative;

  .radar-container {
    height: 10em;
    overflow: hidden;
    position: relative;
    width: 10em;
  }

  iframe {
    border: none;
    height: 30em;
    left: -10em;
    position: absolute;
    top: -10em;
    width: 30em;
  }

  .radar-cover {
    border: solid 1em #fff;
    border-radius: 1.5em;
    bottom: -0.7em;
    cursor: pointer;
    left: -0.7em;
    position: absolute;
    right: -0.7em;
    top: -0.7em;

    &:hover {
      background: rgba(0, 0, 0, 0.4);
    }
  }

  button {
    align-items: center;
    background: #333;
    border: solid 2px #fff;;
    border-radius: 50%;
    display: none;
    height: 3.5em;
    justify-content: center;
    position: absolute;
    right: 0.6em;
    top: 0.6em;
    width: 3.7em;

    &:hover {
      background: lighten(#333, 20%);
    }

    .icon {
      color: #fff;
      font-size: 2em;
    }
  }

  &.with-controls {
    display: none;
    margin-left: 0;

    &,
    .radar-container,
    iframe {
      bottom: 0;
      height: 100%;
      left: 0;
      position: fixed;
      right: 0;
      top: 0;
      width: 100%;
    }

    .radar-cover {
      display: none;
    }

    button {
      display: flex;
    }
  }
}

.showing-radar .radar.with-controls {
  display: block;
}

@media screen and (min-width: 450px) {
  .current {
    .temp {
      margin-right: 1rem;
    }

    .icon {
      font-size: 4em;
      margin-top: 0.1em;
    }

    .row {
      p {
        width: 8rem;
      }
    }
  }
}

@media screen and (min-width: 700px) {
  .current {
    margin: 2em 0;

    .row {
      &:first-of-type {
        margin-top: 0.2em;
      }
    }

    .precip {
      margin-top: 2em;
    }
  }
}

.charts {
  margin: 0 auto;
  padding-right: 2em;
  width: 100%;

  .has-focused-day & {
    overflow-x: auto;
  }
}

.days-arrow {
  padding: 0.4em 2em;
}

.recharts-wrapper {
  margin-left: -15px; // compensate for too much padding on left
}

.days {
  border: solid 1px $border;
  border-left: none;
  margin-left: 50px;
  font-size: 0.8em;
  position: relative;

  .is-loading & {
    height: 130px;

    .days-list,
    .days-arrow {
      display: none;
    }
  }

  .has-focused-day & {
    overflow-x: scroll;
    overflow-y: hidden;
  }

  .days-scroll-container {
    overflow: hidden;
    position: relative;

    // necessary for the days to line up correctly and to have a full border
    // when the days are scrolling
    .left-border {
      background: $border;
      bottom: 0;
      left: 0;
      position: absolute;
      top: 0;
      width: 1px;
    }
  }

  .days-list {
    display: flex;
    transition: all 1.5s ease-in-out;
  }

  .day-label-container {
    overflow: visible;
    position: relative;
  }

  .day {
    border-left: solid 1px $border;
    cursor: pointer;
    padding: 0.4em 0;
    text-align: center;

    &:hover {
      background: #f8f8f8;
    }

    &.is-focused {
      background: #eee;
    }

    .date {
      border-bottom: solid 1px $border;
      padding-bottom: 0.4em;
    }

    .details {
      color: #bfbfbf;
      font-size: 0.9rem;
      padding-top: 0.4em;
    }

    .temp-min {
      color: $cold;
    }

    .temp-max {
      color: $hot;
    }

    .icon {
      align-items: center;
      display: flex;
      justify-content: center;
      height: 5.2em;
    }

    .precip {
      .weather-icon {
        font-size: 0.8em;
        margin-right: 0.3rem;
      }
    }
  }

  .days-arrow {
    background: none;
    border: none;
    bottom: 0;
    color: #9d9d9d;
    position: absolute;
    top: 0;

    svg {
      transform: scaleY(1.5);
    }
  }

  .days-arrow-left {
    padding-right: 0.2em;
    right: 100%;
  }

  .days-arrow-right {
    left: 100%;
    padding-left: 0.2em;
  }
}

.precip-chart,
.wind-chart {
  margin-top: -20px;
}

.recharts-tooltip-wrapper {
  transition: none !important;
}

.tooltip {
  background: #FFF;
  border-radius: 3px;
  border: solid 1px #d3d3d3;
  font-size: 0.8em;
  padding: 0.4em;

  .temp,
  .apparent-temp,
  .precip,
  .wind {
    margin-top: 0.4em;
  }

  .temp {
    color: $temp;
  }

  .apparent-temp {
    color: $cold;
  }

  .precip {
    color: darken($precip, 20%);
  }

  .wind {
    color: $wind;
  }
}

.y-label {
  font-size: 0.7em;
}

.recharts-legend-wrapper {
  bottom: 25px !important;
  font-size: 0.8em;
  right: 0 !important;

  .recharts-surface {
    position: relative;
    top: -2px;
  }
}

.legend {
  align-items: center;
  display: flex;
  justify-content: flex-end;

  .legend-item {
    align-items: center;
    display: flex;
    margin-left: 1em;
  }

  .box {
    display: block;
    height: 0.7em;
    margin-right: 0.4em;
    width: 1em;
  }

  .temp .box {
    background: $temp;
  }

  .apparent-temp .box {
    background: $cold;
  }

  .precip-probability .box {
    background: alpha($precip, 0.2);
    border: solid 1px $precipBorder;
  }

  .snow-probability .box {
    background: alpha($cold, 0.4);
    border: solid 1px $precipBorder;
  }

  .wind-speed .box {
    background: $wind;
  }
}

.link-like-button {
  background: none;
  border: none;
  color: #3b6ea7;
  font-size: 1em;

  &:hover,
  &:focus,
  &:active {
    color: lighten(#3b6ea7, 20%);
  }
}

.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 4em;
  padding: 4em 1em 1em;

  button {
    @extend .link-like-button;
  }

  .reload .icon {
    margin-right: 0.2em;
  }
}

.debug-logs {
  background: #f8f8f8;
  border: solid 1px #d3d3d3;
  margin: 1em;
  padding: 1em;

  button {
    @extend .link-like-button;
    float: right;
    margin-bottom: 1em;

    &:first-child {
      margin-left: 1em;
    }
  }

  ul {
    clear: both;
    font-family: monospace;
    overflow-x: auto;
    white-space: nowrap;
  }

  li {
    margin: 0.4em 0;
  }

  .timestamp,
  .message {
    display: block;
    font-size: 0.7em;
  }

  .timestamp {
    color: $cold;
    margin-right: 0.4em;
    margin-bottom: 0.2em;
  }

  @media screen and (min-width: 450px) {
    li {
      margin: 0.2em;
    }

    .timestamp,
    .message {
      display: inline;
      margin-bottom: 0;
    }
  }
}

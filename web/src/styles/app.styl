#app {
  overflow-x: hidden;
}

.app {
  bottom: 0;
  right: 0;
  overflow-x: hidden;
  position: absolute;
  left: 0;
  top: 0;
}

header {
  margin: 0 auto;
  max-width: 32em;
  padding-top: 0.5em;
}

.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 4em;
  padding: 4em 1em 1em;

  button {
    @extend .link-like-button;
  }

  .reload .icon {
    margin-right: 0.2em;
  }
}

.debug-logs {
  background: #f8f8f8;
  border: solid 1px #d3d3d3;
  margin: 1em;
  padding: 1em;

  button {
    @extend .link-like-button;
    float: right;
    margin-bottom: 1em;

    &:first-child {
      margin-left: 1em;
    }
  }

  ul {
    clear: both;
    font-family: monospace;
    overflow-x: auto;
    white-space: nowrap;
  }

  li {
    margin: 0.4em 0;
  }

  .timestamp,
  .message {
    display: block;
    font-size: 0.7em;
  }

  .timestamp {
    color: $cold;
    margin-right: 0.4em;
    margin-bottom: 0.2em;
  }

  @media screen and (min-width: 450px) {
    li {
      margin: 0.2em;
    }

    .timestamp,
    .message {
      display: inline;
      margin-bottom: 0;
    }
  }
}

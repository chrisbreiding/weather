.location {
  display: flex;
  flex-grow: 2;
}

.location-chooser {
  display: flex;
  justify-content: center;
  width: 100%;

  button {
    align-items: center;
    background: #666;
    border: none;
    color: $lightest;
    display: flex;
    font-size: 1em;
    outline: none;
    padding: 0.4em 0.6em;

    &:hover {
      background: #444;
    }

    &[disabled],
    &[disabled]:hover {
      background: #999;
      cursor: not-allowed;
    }
  }

  @keyframes spin {
    0%   { transform: rotate(0deg);   }
    100% { transform: rotate(360deg); }
  }

  .animate {
    animation: spin 2s linear infinite;
  }

  .user-location,
  .toggle-recent {
    margin-right: 0.5em;
  }

  .user-location {
    border-radius: 5px 0 0 5px;
  }

  .chooser {
    flex-grow: 2;
    min-width: 12em;
    position: relative;

    .clear {
      color: #666;
      cursor: pointer;
      display: none;
      padding: 0.4em 0.6em;
      position: absolute;
      right: 2px;
      top: 2px;
    }

    form:hover {
      input {
        padding-right: 2em;
      }

      .clear {
        display: block;
      }
    }

    input:focus {
      border-color: $precip;
      outline: none;
      padding-right: 2em;

      + .clear {
        display: block;
      }
    }
  }

  .search {
    border-radius: 0 5px 5px 0;
    margin-left: 0.5em;
  }

  .query {
    border: solid 1px $border;
    border-radius: 0;
    padding: 0.4em 0.6em;
    font-size: 1em;
    width: 100%;
    -webkit-appearance: none;
  }

  ul {
    background: $lightest;
    border: solid 1px $border;
    border-top: none;
    box-shadow: 0 0 0.4em rgba(0, 0, 0, 0.1);
    display: none;
    left: 0;
    position: absolute;
    right: 0;
    top: 100%;
    z-index: 1;

    li {
      border-top: solid 1px $border;
      display: block;
      cursor: pointer;
      padding: 0.4em 0.6em;

      &:hover {
        background: #f4f4f4;
      }

      &:first-child {
        border-top: none;
        padding-top: 0.2rem;
      }
    }
  }

  &.showing-recent .recent,
  &.has-options .options {
    display: block;
  }

  &.has-options .recent {
    display: none;
  }

  .recent {
    label {
      color: #666;
      font-size: 0.8em;
      padding: 0.3em 0.4em;
    }

    li {
      display: flex;
      padding: 0;

      &:hover {
        background: none;
      }

      div {
        align-items: center;
        cursor: pointer;
        display: flex;
        padding: 0.4em 0.6em;

        &:hover {
          background: #f4f4f4;
        }
      }

      .description {
        flex-grow: 2;
      }

      form.description {
        display: none;
      }

      &.is-editing {
        div.description { display: none; }
        form.description { display: block; }
      }

      input {
        background: #f8f8f8;
        border: none;
        border-right: solid 1px #e3e3e3;
        font-size: 1em;
        padding: 0.4em 0.6em;
        width: 100%;

        &:focus {
          outline: solid 1px $precip;
        }
      }

      button {
        color: #afafaf;

        &,
        &:hover {
          background: none;
        }
      }

      &.is-editing .edit,
      .edit:hover {
        color: $precip;
      }

      .remove:hover {
        color: $alert;
      }
    }
  }

  .location-error {
    color: $alert;
    background: #ffebe2;
    border: solid 1px $alert;
    display: none;
    font-size: 0.8em;
    left: 0;
    padding: 0.6em 1em;
    position: absolute;
    right: 0;
    top: 100%;
    z-index: 10;
  }

  &.has-error .location-error {
    display: block;
  }
}
